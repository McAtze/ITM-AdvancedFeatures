<?xml version="1.0" encoding="utf-8"?>
<templates>
  <template type="public" title="itm_af_threadButtons_macros" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:macro name="top">
	<xf:pageaction>
		<xf:button href="#footer" data-xf-click="scroll-to">
			<xf:fa icon="fa-arrow-down" /><span class="u-srOnly">{{ phrase('bottom') }}</span>
		</xf:button>
		<xf:button href="{{ link('whats-new') }}" class="button--cta" icon="bolt">
			{{ phrase('whats_new') }}
		</xf:button>
	</xf:pageaction>
</xf:macro>

<xf:macro name="bottom">
	<div class="block-outer">
		<div class="block-outer-opposite">
			<xf:button href="#top" data-xf-click="scroll-to">
				<xf:fa icon="fa-arrow-up" /><span class="u-srOnly">{{ phrase('top') }}</span>
			</xf:button>
			<xf:button href="{{ link('whats-new') }}" class="button--cta" icon="bolt">
				{{ phrase('whats_new') }}
			</xf:button>
		</div>
	</div>
</xf:macro>]]></template>
</templates>
